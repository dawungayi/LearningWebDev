<%- include ("partials/header.ejs")%>

<!-- Edit Form -->
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <!-- Form for typing in blog info  -->
    <form class="ui form" action="/blogs/<%= blog._id %>/?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <!-- for a form, the value attribute pre-fills the input with the param passed  -->
            <input type="text" name="blog[title]", value="<%= blog.title %>">
        </div>

        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]", value="<%= blog.image %>">
        </div>

        <div class="field">
            <label>Blog Content</label>
            <textarea required name="blog[body]">
                <%- blog.body  %>
            </textarea>     <!-- we can designate the number of rows using: rows="10"-->
            <!-- Using Text Area for a bigger text box input -->
            <!-- <input type="text" name="blog[body]", placeholder="start your blog post..."> -->
        </div>

        <input class="ui primary big basic button" type="submit">
    </form>
</div>


<%- include ("partials/footer.ejs")%>